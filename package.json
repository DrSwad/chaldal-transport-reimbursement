{
  "name": "chaldal-transport-reimbursement",
  "version": "0.0.1",
  "description": "Automate transport reimbursement process for Chaldal",
  "main": "dist/src/index.js",
  "author": "Nayeemul Islam Swad",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/app.ts",
    "build": "node_modules/.bin/tsup",
    "start": "node dist/app.js",
    "lint": "eslint --fix --quiet src/**/*.ts",
    "format": "prettier --loglevel silent --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@google-cloud/local-auth": "^3.0.1",
    "cheerio": "^1.1.2",
    "google-auth-library": "^10.1.0",
    "googleapis": "^154.0.0",
    "node-html-to-image": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint-parser": "^22.0.0"
  },
  "tsup": {
    "entry": [
      "src",
      "!src/**/*.spec.*"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "esm"
    ],
    "dts": false
  }
}
