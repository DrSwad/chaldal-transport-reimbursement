{
  "compilerOptions": {
    "module": "node18",
    "moduleResolution": "node16",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2024",
    "outDir": "./dist",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/**/*.spec.ts"]
}
